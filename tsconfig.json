{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNEXT",
    "module": "commonJS",
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules"],
  "include": ["src", "src/templates/*.css", "src/templates/*.hbs"]
}
